<% messages.forEach(function(msg) { %>
<div class="message-container">
  <div class="title">
    <h3><%= msg.title %></h3>
  </div>
  <div class="message-content">
    <h4><%= msg.body %></h4>
  </div>
  <div class="message-details">
    <% if (!currentUser) {%>
    <p class="text-warning"><i>login to see the date and the username</i></p>
    <% } else if(currentUser.membership) { %>
    <p><%= msg.date_formatted %></p>
    <p>From: <%= msg.user.username %></p>
    <% } else {%>
    <p class="text-warning">Join the club to see who posted this!</p>
    <% if(currentUser.isAdmin) { %>
    <form action="" method="POST">
      <input type="hidden" id="postid" name="postid" value="<%= msg._id %>">
      <button type="submit">Delete</button>
    </form>
    <% } %> <% } %>
  </div>
</div>

<% }) %>

<div class="pagination">
  <% if (currentPage > 1) { %>
  <a href="/?page=<%= currentPage - 1 %>">&laquo; Previous</a>
  <% } %>
  <% if (currentPage < totalPages) { %>
  <a href="/?page=<%= currentPage + 1 %>">Next &raquo;</a>
  <% } %>
  <p>Page <%= currentPage %> of <%= totalPages %></p>
</div>

<%= console.log(currentPage) %>